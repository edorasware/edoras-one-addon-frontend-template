<?xml version="1.0" encoding="UTF-8"?>
<palette id="edoras-addon-form-palette"
         resource-bundle="{{widgetNameParamCase}}.translation"
         apply-patch-to-palette="edoras-one-form-palette"
         xmlns="http://www.edorasware.com/schema/vis/palette"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.edorasware.com/schema/vis/palette
                             http://www.edorasware.com/schema/vis/edoras-vis-form-palette-2.0.60.xsd">

  <component-presentations base-editor-view-path="component-presentations/view" base-palette-icon-path="icon">
    <component-presentation id="{{widgetNameCamelCase}}.presentation" palette-icon-path="{{widgetNameParamCase}}.icon.png"/>
  </component-presentations>

  <group id="edoras-addon">
    <component id="{{widgetNameParamCase}}" extends="component" presentation-id="{{widgetNameCamelCase}}.presentation" roles="core_form_controls" xmltag="{{widgetNameCamelCase}}">
      <layout min-width="20" min-control-height="24" min-control-width="150" min-height="24" type="layout.form.controls" offset-x="10" offset-y="0"/>
      <attribute id="label" category="common" index="1" multilanguage="true" path="label" ref-to-view="label_text" runtime="false" type="SimpleText" value=""/>
      <attribute id="value" category="common" index="2" path="value" ref-to-view="input_text" runtime="false" type="SimpleText" value="" visible="false"/>
      <attribute id="description" category="common" index="3" ref-to-view="desc_text" runtime="false" type="SimpleText" value=""/>
      <attribute id="col-span" category="common" path="size" type="Integer" value="" visible="false"/>
      <attribute id="visible" category="common" optional="yes" path="isVisible" runtime="true" type="Boolean" value="true"/>
      <attribute id="editable" category="common" path="editable" type="Boolean" value="true"/>
    </component>
  </group>

</palette>
